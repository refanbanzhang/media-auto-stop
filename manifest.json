{
  "manifest_version": 3,
  "name": "媒体自动停止",
  "version": "1.0",
  "description": "设定倒计时，结束后自动停止所有标签页中的音视频播放",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "alarms",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}